
.libras-ui {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  box-sizing: border-box;
  pointer-events: none;

  .libras-component {
    pointer-events: auto;
  }

  /* attribution's position is a special case */
  .libras-attribution {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
  }
}

.libras-ui-corner {
  position: absolute;
  display: flex;
}

.libras-ui-inner-container {
  position: absolute;
  left: 15px;
  top: 15px;
  bottom: 15px;
  right: 15px;
}

.libras-ui-manual-container > .libras-component {
  position: absolute;
}

// Top Corners
.libras-ui-top-left,
.libras-ui-top-right {
  flex-flow: column;
}

.libras-ui-top-left {
  align-items: flex-start;
}

.libras-ui-top-right {
  align-items: flex-end;
}

//  Bottom Corners
.libras-ui-bottom-left,
.libras-ui-bottom-right {
  flex-flow: row;
  align-items: flex-end;
}

.libras-ui-bottom-right {
  flex-flow: row-reverse;
}

.libras-ui-top-left {
  top: 0;
  left: 0;
}

.libras-ui-top-right {
  top: 0;
  right: 0;
}

.libras-ui-top-right .libras-component,
.libras-ui-top-left .libras-component {
  margin-bottom: 10px;
}

.libras-ui-bottom-left {
  bottom: 0;
  left: 0;

  .libras-component {
    margin-right: 10px;
  }
}

.libras-ui-bottom-right {
  bottom: 0;
  right: 0;

  .libras-component {
    margin-left: 10px;
  }
}

html[dir="rtl"] {
  .libras-ui-top-left {
    align-items: flex-end;
  }
  .libras-ui-top-right {
    align-items: flex-start;
  }
  .libras-ui-bottom-left,
  .libras-ui-bottom-right {
    flex-direction: row-reverse;
  }
}

/* ZoomBox */

.libras-zoom-box__container {
  position: relative;
  height: 100%;
  width: 100%;
}

.libras-zoom-box__overlay {
  cursor: crosshair;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.libras-zoom-box__overlay-background {
  fill: rgba(0, 0, 0, 0.1);
}

.libras-zoom-box__outline {
  fill: transparent;
  stroke: dodgerblue;
  stroke-dasharray: 1, 1;
  stroke-width: 2px;
}