@mixin horizontalSlider() {
  .libras-horizontal-slider.dijitSlider.dijitDisabled {
    opacity: 0.50;
  }

  .libras-horizontal-slider.dijitSlider .dijitSliderBumper {
    background: #999 none;
  }

  .libras-horizontal-slider.dijitSlider .dijitSliderBar {
    border-color: #999;
  }

  .libras-horizontal-slider.dijitSlider .dijitSliderProgressBar {
    background: #ddd none;
  }

  .libras-horizontal-slider.dijitSlider .dijitSliderImageHandle,
  .libras-horizontal-slider.dijitSlider .dijitSliderImageHandle.dijitSliderThumbHover {
    background: url("../base/images/slider-handle.png");
    border: none;
    width: 10px;
    height: 14px;
  }

  .dijitRtl .libras-horizontal-slider.dijitSlider .dijitSliderImageHandle {
    left: auto;
    right: 50%;
  }

  .dijitRtl .libras-horizontal-slider .dijitSliderMoveableH {
    right: auto;
    left: 0;
  }

  .libras-horizontal-slider .dijitRuleContainer {
    padding: 6px 0 20px;
    color: #4d4d4d;
  }

  .libras-horizontal-slider .dijitRuleLabel {
    z-index: 2;
    font-size: 12px;
  }
}

@if $include_HorizontalSlider == true {
  @include horizontalSlider();
}